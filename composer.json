{
    "name": "xbot-my/xbot-utils",
    "description": "Utility tools for develop or manage project.",
    "type": "library",
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^4.0.0",
        "phpstan/phpstan": "^1.10"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Xbot\\Utils\\": "src/"
        },
	"files": [
	   "src/func.php"
	]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "XBot Dev",
            "email": "contact@xbot.my"
        }
    ],
    "bin": [
        "bin/xbot"
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
